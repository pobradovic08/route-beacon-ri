! cEOS-lab BGP router with BMP Loc-RIB + Add-Path
!
hostname bgp-router-ceos
!
no aaa root
!
service routing protocols model multi-agent
!
ip routing
!
interface Management0
   ip address 172.30.0.20/24
   no shutdown
!
router bgp 65002
   router-id 10.0.0.2
   no bgp enforce-first-as
   maximum-paths 2
   neighbor 172.30.0.30 remote-as 65001
   neighbor 172.30.0.31 remote-as 65003
   !
   bgp rib bestpaths monitoring
   monitoring bgp rib bestpaths
   bgp monitoring
   bgp additional-paths receive
   !
   monitoring station gobmp
      connection address 172.30.0.10
      connection mode active port 5000
      export-policy bgp rib bestpaths
      export-policy received routes additional-paths
      no shutdown
   !
   address-family ipv4 unicast
      bgp additional-paths install
!
end
