[Unit]
Description=RIB Ingester Service
After=network.target postgresql.service
Wants=network.target

[Service]
Type=simple
User=rib-ingester
Group=rib-ingester
ExecStart=/opt/rib-ingester/rib-ingester serve --config /etc/rib-ingester/config.yaml
Restart=on-failure
RestartSec=5
LimitNOFILE=65536
StandardOutput=journal
StandardError=journal
SyslogIdentifier=rib-ingester

[Install]
WantedBy=multi-user.target
